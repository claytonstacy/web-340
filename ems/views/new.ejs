<%- include('header'); -%>
<%- include('navbar'); -%>

<!-- Form to create new employee -->
<form class="text-center border border-light p-5" method="post" action="/process">

    <p class="h4 mb-4">New Employee</p>

    <!-- Name -->
    <div class="form-group">
    <input type="text" id="firstName" name="firstName" class="form-control mb-4" placeholder="First Name">
    <input type="text" id="middleName" name="middleName" class="form-control mb-4" placeholder="Middle Name">
    <input type="text" id="lastName" name="lastName" class="form-control mb-4" placeholder="Last Name">

    <!-- Email -->
    <input type="email" id="Email" name="email" class="form-control mb-4" placeholder="E-mail">
    </div>

    <!-- Submit button -->
    <!-- CSRF token -->
    <input name="_csrf" value="<%= csrfToken %>" type="hidden">
    <input class="btn btn-info btn-block" type="submit"></input>

</form>
<%- include('footer'); -%>